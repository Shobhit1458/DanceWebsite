extends base.pug

block scripts 
    script(src='index.js') 

block style
    style 
        include ../static/style.css
        include ../static/contact.css
        //- include ../static/phone.css @media= only screen and (max-width:1287px)
block content 
    h1 CONTACT FORM
    form(action="/contact", method="post" class="form") 
        input(type="text" class="input" name="name" placeholder="Enter your Name")
        input(type="phone" class="input" name="name" placeholder="Enter your Contact Number")
        input(type="email" class="input" name="name" placeholder="Enter your E-Mail ")
        input(type="text" class="input" name="Address" placeholder="Enter your Address")
        input(type="text" class="input" name="Qualities" placeholder="Enter your Qualities")
        button(class="btn")
            | Submit